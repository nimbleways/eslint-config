{
  "name": "@nimbleways/eslint-config",
  "description": "Nimbleways's standarized ESLint configuration with bundled dependencies.",
  "version": "0.1.1",
  "main": "index.js",
  "homepage": "https://github.com/nimbleways/eslint-config",
  "repository": "https://github.com/nimbleways/eslint-config",
  "author": "Nimbleways ( https://nimbleways.com/ )",
  "files": [
    "*.js",
    "configurations/*.js"
  ],
  "scripts": {
    "# === GENERAL === #": "=======================================",
    "lint": "eslint --fix \"*.js\"",
    "lint:check": "eslint \"*.js\"",
    "check-missing-rules": "eslint-find-rules --unused",
    "# === NPM PUBLISH === #": "===================================",
    "prepare": "husky install",
    "release": "np"
  },
  "dependencies": {
    "@rushstack/eslint-patch": "1.2.0",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0"
  },
  "peerDependencies": {
    "eslint": ">=7",
    "prettier": ">=2.5.1",
    "typescript": ">=4.5.4"
  },
  "devDependencies": {
    "@types/eslint": "^8.2.1",
    "eslint": "7.32.0",
    "eslint-find-rules": "^4.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "np": "^7",
    "prettier": "2.5.1",
    "typescript": "4.5.4"
  },
  "eslintConfig": {
    "extends": [
      "./index.js"
    ],
    "rules": {
      "max-lines": "off"
    },
    "ignorePatterns": [
      "examples"
    ],
    "root": true
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "np": {
    "branch": "main"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT"
}
